
<div id="settings_camera_calibration">
    <h4>{{ _('Camera Calibration') }}</h4>

    <form class="form-horizontal">
        <div id="calibration_step_1" class="control-group calibration_step active">
            <label class="control-label" for="step1">{{ _('Step 1') }}</label>
            <div class="controls">
                <div>{{_('Please put a piece of cardboard inside your Mr Beam II that it covers the whole working area.<br/> \n\
						Afterwards close the lid. When you proceed, Mr Beam will start engraving the calibration markers on the cardboard.')}}</div>
				<button class="btn btn-primary" data-bind="click: engrave_markers">{{ _('Engrave Markers') }}</button>
				<button class="btn btn-default" data-bind="click: next">{{ _('Next') }}</button>
				<img src="/plugin/mrbeam/static/img/cam_calibration/please_insert_cardboard.jpg" style="width:25%;" />
				<img src="/plugin/mrbeam/static/img/cam_calibration/close_the_lid.jpg" style="width:25%;" />
            </div>
        </div>
        <div id="calibration_step_2" class="control-group calibration_step">
            <label class="control-label" for="step2">{{ _('Step 2') }}</label>
            <div class="controls">
                <div>{{_('Wait until the engraving is finished and Mr Beam II illuminates green.<br/> \n\
						Open the safety lid again but do not touch the engraved cardboard.<br/>\n\
						The camera will now take a picture of the engraving.')}}</div>
				<button class="btn btn-primary" data-bind="click: loadUndistortedPicture">{{ _('Take Picture') }}</button>
				<button class="btn btn-default" data-bind="click: next">{{ _('Next') }}</button>
            </div>
        </div>
        <div id="calibration_step_3" class="control-group calibration_step">
            <label class="control-label" for="step3">{{ _('Step 3') }}</label>
            <div class="controls">
                <div>{{_('Click on the arrow head of the marker in the magnified picture.<br/> \n\
						Continue with the other markers as the picture changes.<br/>\n\
						Once all arrowheads are marked the calibration is finished.')}}</div>
				<button class="btn btn-default" data-bind="click: next">{{ _('Finish') }}</button>
				<svg width="100%" height="100%" viewBox="0 0 512 384" data-bind="attr: {viewBox: calSvgViewBox()}">
					<image data-bind="attr: {href: calImgUrl(), width:calImgWidth(), height:calImgHeight() }, click: userClick" />
				</svg>
            </div>
        </div>
        <div id="calibration_step_4" class="control-group calibration_step">
            <label class="control-label" for="step3">{{ _('Success') }}</label>
            <div class="controls">
                <div>{{_('Your camera is now calibrated.')}}</div>
				<button class="btn btn-default" data-bind="click: next">{{ _('Start over') }}</button>
            </div>
        </div>
<!--        <div class="control-group">
            <button class="btn btn-primary" data-bind="click: abortCalibration">{{ _('Abort') }}</button>
        </div>-->
    </form>
</div>
